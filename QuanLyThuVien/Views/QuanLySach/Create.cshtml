
@model InfoBook
@{
    ViewData["Title"] = "Nhập sách";
}

<main>
    <form method="post" asp-controller="QuanLySach" asp-action="Create" style="width: 50%;">
        <fieldset>
            <legend>Add new book</legend>
            <div class="form-group">
                <label asp-for="Sach.NgayNhap" class="form-label mt-4">Import date</label>
                <input asp-for="Sach.NgayNhap" type="date" class="form-control" required placeholder="Import date">
            </div>
            <div class="form-group">
                <label asp-for="Sach.TenSach" class="form-label mt-4">Book title</label>
                <input asp-for="Sach.TenSach" type="text" class="form-control" required placeholder="Enter book title">
            </div>
            <div class="form-group">
                <label asp-for="Sach.TacGia.TenTacGia" class="form-label mt-4">Author</label>
                <input asp-for="Sach.TacGia.TenTacGia" type="text" class="form-control" required placeholder="Enter author name">
            </div>
            <div class="form-group">
                <label asp-for="Sach.TacGia.QuocGia" class="form-label mt-4">National</label>
                <input asp-for="Sach.TacGia.QuocGia" type="text" class="form-control" required placeholder="Enter national">
            </div>
            <div class="form-group">
                <label asp-for="TenTheLoai" class="form-label mt-4">Category</label>
                <input asp-for="TenTheLoai" type="text" class="form-control" required placeholder="Enter category name">
            </div>
          @*   <div class="form-group">
                <label asp-for="Sach.TheLoai.ID_TheLoai" class="form-label mt-4">Lựa chọn thể loại</label>
                <select asp-for="Sach.TheLoai.ID_TheLoai" asp-items="Model.TheLoaiSelectList" class="form-select">
                </select>
            </div> *@
            <div class="form-group">
                <label asp-for="Sach.GiaTien" class="form-label mt-4">Book price</label>
                <input asp-for=Sach.GiaTien type="text" class="form-control" required placeholder="Enter book price">
            </div>
            <div class="form-group">
                <label asp-for="Sach.GiaThueTheoNgay" class="form-label mt-4">Fee</label>
                <input asp-for=Sach.GiaThueTheoNgay type="text" class="form-control" required placeholder="Enter borrow fee per day">
            </div>
            <div class="form-group">
                <label asp-for="Sach.SoLuong" class="form-label mt-4">Quantity</label>
                <input asp-for=Sach.SoLuong type="text" class="form-control" required placeholder="Enter book quantity">
            </div>
            <div class="form-group">
                <label asp-for="Sach.UrlImg" class="form-label mt-4">Image URL</label>
                <input asp-for="Sach.UrlImg" class="form-control" type="text" required placeholder="Import book image url">
            </div>
            <div class="mt-3">
                <a asp-controller="QuanLySach" asp-action="Index" class="btn btn-outline-primary" style="margin-right: 4px">Cancel</a>
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i>&nbsp; Create
                </button>
            </div>
        </fieldset>
    </form>
</main>