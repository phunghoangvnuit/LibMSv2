@model SachMuon
@{
    ViewData["Title"] = "Edit";
}

<main>
    <form method="post" asp-controller="QuanLyMuonTraSach" asp-action="Edit" style="width:50%;">
        <fieldset>
            <legend>Edit borrowing record</legend>
            <div class="form-group">
                <label asp-for="MaPhieuMuon" class="form-label mt-4">Record ID</label>
                <input asp-for="MaPhieuMuon" type="text" readonly class="form-control" />
            </div>
            <div class="form-group d-flex align-items-end">
                <div style="flex:auto; margin-right: 12px;">
                    <label asp-for="MaTheThuVien" class="form-label mt-4">Library Card <span class="text-danger">*</span></label>
                    <select asp-for="MaTheThuVien" asp-items="ViewBag.DocGias" class="form-control flex" required placeholder="Select patron">
                    </select>
                    <span asp-validation-for="MaTheThuVien" class="text-danger"></span>
                </div>
                <div style="flex:auto;">
                    <label asp-for="MaSach" class="form-label mt-4">Book <span class="text-danger">*</span></label>
                    <select asp-for="MaSach" asp-items="ViewBag.Sachs" class="form-control" required placeholder="Select book">
                    </select>
                    <span asp-validation-for="MaSach" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group d-flex align-items-end">
                <div style="flex:auto; margin-right: 12px;">
                    <label asp-for="NgayTaoPhieu" class="form-label mt-4">Borrow date <span class="text-danger">*</span></label>
                    <input asp-for="NgayTaoPhieu" type="date" class="form-control" required />
                </div>
                <div style="flex:auto;">
                    <label asp-for="NgayHenTra" class="form-label mt-4">Return date <span class="text-danger">*</span></label>
                    <input asp-for="NgayHenTra" type="date" class="form-control" required />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="SoLuongMuon" class="form-label mt-4">Borrow quantity</label>
                <input asp-for="SoLuongMuon" type="number" class="form-control" required readonly placeholder="Enter borrow quantity" />
                <span asp-validation-for="SoLuongMuon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HinhThucMuon" class="form-label mt-4">Borrow type <span class="text-danger">*</span></label>
                <select asp-for="HinhThucMuon" asp-items="ViewBag.HinhThucMuons" class="form-control" required placeholder="Select borrow quantity">
                </select>
                <span asp-validation-for="HinhThucMuon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GhiChuMuon" class="form-label mt-4">Note</label>
                <input asp-for="GhiChuMuon" type="text" class="form-control" placeholder="" />
            </div>
        </fieldset>

        <fieldset style="position:absolute; bottom:0;">
            <a asp-controller="QuanLyMuonTraSach" asp-action="ViewSachMuon" class="btn btn-outline-primary" style="margin-right: 4px">Cancel</a>
            <button type="submit" class="btn btn-success">Update</button>
        </fieldset>
    </form>
</main>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('select[name="MaTheThuVien"]').select2();
            $('select[name="MaSach"]').select2();
        });
    </script>
}