
@model DocGia
@{
    ViewData["Title"] = "Create";
}

<main>
    <form method="post" asp-controller="QuanLyDocGia" asp-action="CreatePost" style="width: 50%;">
        <fieldset>
            <legend>Add new patron</legend>
            <div class="form-group">
                <label asp-for="@Model.TenDocGia" class="form-label mt-4">Patron name</label>
                <input asp-for="@Model.TenDocGia" type="text" class="form-control" required id="TenDocGia" placeholder="Patron name">
            </div>
            <div class="form-group">
                <label asp-for="@Model.MaSV" class="form-label mt-4">Student ID</label>
                <input asp-for="@Model.MaSV" class="form-control" type="text" required id="MaSV" placeholder="Enter student id">
            </div>
            <div class="form-group">
                <label asp-for="@Model.GioiTinh" class="form-label mt-4">Sexual</label>
                <input asp-for="@Model.GioiTinh" type="text" class="form-control" required id="GioiTinh" placeholder="Enter sexual">
            </div>
            <div class="form-group">
                <label asp-for="@Model.NgaySinh" class="form-label mt-4">Dob</label>
                <input asp-for="@Model.NgaySinh" type="date" class="form-control" required id="NgaySinh">
            </div>
            <div class="form-group">
                <label asp-for="@Model.DiaChi" class="form-label mt-4">Address</label>
                <input asp-for="@Model.DiaChi" type="text" class="form-control" required id="DiaChi" placeholder="Enter address">
            </div>
            <div class="form-group">
                <label asp-for="@Model.SDT" class="form-label mt-4">Phone</label>
                <input asp-for="@Model.SDT" type="text" class="form-control" required id="SDT" placeholder="Enter phone number">
            </div>
            <div class="form-group">
                <label asp-for="@Model.Email" class="form-label mt-4">Email</label>
                <input asp-for="@Model.Email" type="email" class="form-control" required id="Email" placeholder="Enter email">
            </div>
            <div class="mt-3">
                <a asp-controller="QuanLyDocGia" asp-action="Index" class="btn btn-outline-primary" style="margin-right: 4px">Cancel</a>
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i>&nbsp; Create
                </button>
            </div>
        </fieldset>
    </form>
</main>